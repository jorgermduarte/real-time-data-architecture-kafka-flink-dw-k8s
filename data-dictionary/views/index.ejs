<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Dictionary</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Ubuntu Font from Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Ubuntu', sans-serif;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Data Dictionary</a>
    </div>
  </nav>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Tables</h1>
    <div class="list-group">
      <% tables.forEach(table => { %>
        <a href="/table/<%= table %>" class="list-group-item list-group-item-action">
          <strong><%= table %></strong>
          <span class="text-muted">- <%= metadata[table].description || "Sem descrição" %></span>
        </a>
      <% }) %>
    </div>
    <br/>
    <h1 class="text-center mb-4">Graph Relationships Network</h1>
    <div class="text-center">
      <a href="/relationships" class="btn btn-success">View Graph Relationships</a>
    </div>
  </div>
</body>
</html>
